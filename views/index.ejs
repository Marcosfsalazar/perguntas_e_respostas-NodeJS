<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <div class="ans-head-container d-flex justify-content-center">
            <h1 class="">QUESTIONS</h1>
        </div>
        <div class="d-flex justify-content-start">
            <a href="/ask" class="btn btn-info mx-2">Ask Question</a>
        </div>
        <% questions.forEach(question => { %>
            <div class="card mt-3 card-wrapper">
                <div class="card-body">
                    <h3><%=question.title%></h3>
                    <p><%=question.question%></p>
                </div>
                <div class="card-footer">
                    <a href="/question/<%=question.id%>"><button class="btn btn-dark">Answer</button></a>
                </div>
            </div>
        <%}) %>
    </div>
</body>
<%- include('partials/footer.ejs') %>
